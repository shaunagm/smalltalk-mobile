<resources>

    <style name="SmallTalkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@drawable/dropshadow</item>
        <item name="android:windowActionBarOverlay">@drawable/dropshadow</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:windowBackground">@color/defaultBackgroundColor</item>
        <item name="android:actionBarStyle">@style/SmallTalkTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/SmallTalkTheme.ActionBarStyle</item>
        <item name="android:dropDownListViewStyle">@style/SmallTalkTheme.ActionBarStyle</item>
        <item name="dropDownListViewStyle">@style/SmallTalkTheme.ActionBarStyle</item>
        <!-- Overflow menu text coloring, took absurdly long to find this: -->
        <item name="android:itemTextAppearance">@style/SmallTalkTheme.ActionBarTextStyle</item>
    </style>



<!-- *********** -->
    <!-- Base Styles -->
    <!-- *********** -->

    <style name="SmallTalkTheme.BaseLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">@dimen/default_text_height</item>
    </style>



    <!-- ********************************** -->
    <!-- Styles for Basic Reusable Elements -->
    <!-- ********************************** -->

    <!-- *** SIZING *** -->

    <style name="SmallTalkTheme.MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallTalkTheme.MatchWidthMatchHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SmallTalkTheme.WrapWidthMatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SmallTalkTheme.WrapWidthWrapHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- *** TEXT *** -->

    <!-- Basic text view -->
    <style name="SmallTalkTheme.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Full width text view -->
    <style name="SmallTalkTheme.FullWidthTextView" parent="SmallTalkTheme.TextView">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Tiny text! -->
    <style name="SmallTalkTheme.SmallTextView" parent="SmallTalkTheme.FullWidthTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Edit Text View -->
    <style name="SmallTalkTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Base Heading Style -->
    <style name="SmallTalkTheme.PageHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:color">@color/darkPrimaryColor</item>
        <item name="android:textSize">@dimen/main_heading_height</item>
    </style>

    <!-- Base Subheading Style -->
    <style name="SmallTalkTheme.PageSubHeading" parent="SmallTalkTheme.PageHeading">
        <item name="android:textSize">@dimen/list_heading_height</item>
        <item name="android:color">@color/primaryText</item>
    </style>

    <!-- *** BUTTONS *** -->

    <!-- Base Button Style -->
    <style name="SmallTalkTheme.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:background">@color/darkPrimaryColor</item>
        <item name="android:textColor">@color/defaultBackgroundColor</item>
    </style>

    <!-- Base Radio Buttons -->
    <style name="SmallTalkTheme.RadioButton" parent="SmallTalkTheme.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginRight">@dimen/default_object_margin</item>
    </style>

    <!-- Base checkbox -->
    <style name="SmallTalkTheme.CheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">@dimen/default_text_height</item>
    </style>

    <!-- Base Image Button Style -->
    <style name="SmallTalkTheme.ImageButton" parent="SmallTalkTheme.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- *** LISTS *** -->

    <!-- Regular List Style -->
    <style name="SmallTalkTheme.DefaultListView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item> <!-- Horizontal & vertical currently the same -->
    </style>


    <!-- ****************************** -->
    <!-- Styles for Detail Activity -->
    <!-- ****************************** -->

    <!-- Styling for "Group", "Topic" and "Contact" icons -->
    <style name="SmallTalkTheme.DataTypeIcon">
        <item name="android:layout_height">@dimen/default_icon_dimen</item>
        <item name="android:layout_width">@dimen/default_icon_dimen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Relationship Image Button ("star", "archive", etc) Style -->
    <style name="SmallTalkTheme.RelationshipImageButton" parent="SmallTalkTheme.ImageButton">
        <item name="android:layout_width">@dimen/relationship_image_dimen</item>
        <item name="android:layout_height">@dimen/relationship_image_dimen</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- Style for listview of related items -->
    <style name="SmallTalkTheme.RelationshipListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">@dimen/default_object_margin</item>
        <item name="android:childDivider">#00000000</item>
    </style>

    <!-- Relationship List Heading styling (used for both header layout & the textview within the header layout -->
    <style name="SmallTalkTheme.RelationshipListHeading" parent="SmallTalkTheme.PageSubHeading">
        <item name="android:layout_height">@dimen/default_icon_dimen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Relationship List Item styling -->
    <style name="SmallTalkTheme.RelationshipItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/list_indentation</item>
        <item name="android:paddingRight">@dimen/list_indentation</item>
    </style>

    <!-- TextView for name of related items -->
    <style name="SmallTalkTheme.ListItemCondensedHeading" parent="SmallTalkTheme.PageHeading">
        <item name="android:textSize">@dimen/list_item_heading_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <!-- *************************** -->
    <!-- Styles for Misc Activities  -->
    <!-- *************************** -->

    <!-- ActionBar style -->
    <style name="SmallTalkTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/darkPrimaryColor</item>
        <item name="android:background">@color/darkPrimaryColor</item>
        <item name="color">@color/defaultBackgroundColor</item>
        <item name="selectableItemBackground">@color/darkPrimaryColor</item>
    </style>

    <style name="SmallTalkTheme.ActionBarTextStyle" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:color">@color/defaultBackgroundColor</item>
        <item name="android:textColor">@color/defaultBackgroundColor</item>
        <item name="android:textColorPrimary">@color/defaultBackgroundColor</item>
        <item name="android:textColorSecondary">@color/defaultBackgroundColor</item>
    </style>

    <!-- Show Archived button -->
    <style name="SmallTalkTheme.SingleButton" parent="SmallTalkTheme.Button">
        <item name="android:padding">@dimen/default_object_margin</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <!-- Used in sets of three, these buttons take up one row.  Used in import contacts & search activities-->
    <style name="SmallTalkTheme.ThirdsButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.333</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SmallTalkTheme.ListHeading" parent="SmallTalkTheme.PageHeading">
        <item name="android:layout_margin">@dimen/default_object_margin</item>
        <item name="android:textColor">@color/darkPrimaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
