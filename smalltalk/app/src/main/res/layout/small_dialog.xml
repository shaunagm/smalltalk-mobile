<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dialog_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_proceed" />

    <Button
        android:id="@+id/dialog_exceptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_exceptions" />

    <CheckBox
        android:id="@+id/dont_show_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dont_show_message" />

</LinearLayout>