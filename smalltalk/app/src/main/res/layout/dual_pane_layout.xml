<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_layout_content"
    style="@style/SmallTalkTheme.BaseLayout"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.smalltalk.android.smalltalk.ListActivityFragment"
        tools:layout="@layout/list_activity_layout" />

    <fragment
        android:id="@+id/omega"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.smalltalk.android.smalltalk.DetailActivityFragment"
        tools:layout="@layout/detail_layout" />

</LinearLayout>