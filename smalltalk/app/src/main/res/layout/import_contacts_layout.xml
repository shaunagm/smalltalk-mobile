<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.smalltalk.ImportContactsFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:id="@+id/import_contacts_selection_fragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <Button
            android:text="view groups"
            android:id="@+id/import_contacts_toggle_type"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"/>
        <Button
            android:text="select all/none"
            android:id="@+id/import_contacts_toggle_select"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"/>
        <Button
            android:text="save"
            android:id="@+id/import_contacts_save"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.333"/>
    </LinearLayout>

    <TextView
        android:text="Contacts"
        android:id="@+id/listview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listview_import_contacts"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

    <ListView
        android:id="@+id/listview_import_groups"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:visibility="gone"/>

</LinearLayout>