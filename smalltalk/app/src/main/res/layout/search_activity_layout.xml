<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_list_activity"
    style="@style/SmallTalkTheme.DefaultListView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Topics"
            android:id="@+id/search_show_topics"
            style="@style/SmallTalkTheme.ThirdsButton" />

        <Button
            android:text="Contacts"
            android:id="@+id/search_show_contacts"
            style="@style/SmallTalkTheme.ThirdsButton" />

        <Button
            android:text="Groups"
            android:id="@+id/search_show_groups"
            style="@style/SmallTalkTheme.ThirdsButton" />

    </LinearLayout>

    <TextView
        android:text="Topics"
        android:id="@+id/searchview_header"
        style="@style/SmallTalkTheme.PageHeading"
        android:textAllCaps="true" />

    <ListView
        android:id="@+id/search_topic_objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/search_contact_objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/search_group_objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>



